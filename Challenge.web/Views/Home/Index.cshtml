@model IEnumerable<Shared.shared.Dtos.UsuarioDto>
@{
    var createOrUpdate = TempData["createOrEdit"] == null ? "nada" : TempData["createOrEdit"];
}

<div class="container">
    @if (User.IsInRole("admin"))
    {
        <div class="row justify-content-center">
            <div class="col-md-8 mb-4">
                <a class="btn btn-outline-primary" href="@(Url.Action("CreateOrEdit", "Home"))"><i class="fas fa-plus"></i> Nuevo</a>
            </div>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
            @if (Model.Where(x => x.Rol.Nombre != "cliente").Any())
            {
                <p class="h4">Lista de Usuarios Totales</p>
            }
            else
            {
                <p class="h4">Lista de Usuarios con rol Cliente</p>
            }
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <table id="example" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Correo Electronico</th>
                        <th>Contraseña</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.Email != User.Identity.Name)
                        {
                            <tr id="Fila@(item.Id)">
                                <td id="mail@(item.Id)">@item.Email</td>
                                <td>*********</td>
                                <td>@item.Rol.Nombre</td>
                                <td>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <input type="checkbox" onchange="return ChangeCheck('@item.Id', '@item.Email', '@item.RolId')" id="check@(item.Id)" class="form-check-input" value="" checked="@item.Activo" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" disabled id="check@(item.Id)" class="form-check-input" value="" checked="@item.Activo" />
                                    }
                                </td>
                                <td>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <a class="btn btn-primary" title="Editar" onclick="EditarUsuario('@item.Id', '@item.Email', '@item.RolId')"><i class="fas fa-pen"></i></a>
                                        <a class="btn btn-danger" onclick="DeleteUser('@item.Id', '@item.Email')" title="Eliminar"><i class="fas fa-eraser"></i></a>
                                    }
                                    else
                                    {
                                        <p>El rango de su cuenta no posee acceso las acciones</p>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
<script>

    $(document).ready(function () {

        if('@createOrUpdate' === "create"){
            alertify.success('Usuario creado con exito')
        }

        if('@createOrUpdate' === "update"){
            alertify.success('Usuario actualizado con exito')
        }

        $('#example').DataTable({
            "language": {
                "sProcessing":    "Procesando...",
                "sLengthMenu":    "Mostrar _MENU_ registros",
                "sZeroRecords":   "No se encontraron resultados",
                "sEmptyTable":    "Ningún dato disponible en esta tabla",
                "sInfo":          "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty":     "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered":  "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix":   "",
                "sSearch":        "Buscar:",
                "sUrl":           "",
                "sInfoThousands":  ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst":    "Primero",
                    "sLast":    "Último",
                    "sNext":    "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
        }
    }
        });
    });

    function DeleteUser(id, email){
        event.preventDefault();
        alertify.confirm('Borrar Usuario', '¿Esta seguro que desea eliminar de manera permanente al usuario ' + email + '?',
        function()
        {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete", "Home")',
                data: { usuarioId: id },
                success: function (data) {
                    if (data.result == true) {
                        $("#Fila" + id).remove();
                        alertify.success('Usuario borrado con exito')
                    } else {
                        alertify.error('Ocurrio un problema al eliminar al usuario');
                    }
                }
            });
        }
                , function(){ });
    }

    function ChangeCheck(usuarioId, email, rolId){
        debugger
        var estado = $("#check" + usuarioId).prop('checked');
        $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateEstado", "Home")',
                data: { usuarioId: usuarioId, rolId: rolId, email: email, activo: estado},
                success: function (data) {
                    if (data.result == true) {
                        alertify.success('Estado actualizado con exito')
                    } else {
                        alertify.error('Ocurrio un problema al actualizar el estado');
                    }
                }
            });
    }

    function EditarUsuario(usuarioId, email, rolId){
        var estado = $("#check" + usuarioId).prop('checked');

        location.href = '@Url.Action("CreateOrEdit", "Home")/?usuarioId=' + usuarioId + '&email=' + email + '&rolId=' + rolId + '&estado=' + estado
    }

</script>
}